extends ../layout
block content
	.container
		form(action='/goodscomment', method='post')
			input(type='hidden', name='movie', value='#{order.movie._id}')
			input(type='hidden', name='user', value='#{order.user._id}')
			.form-group
				textarea.col-sm-6(rows='6', name='content')
			
			button.btn.btn-primary(type='submit') submit