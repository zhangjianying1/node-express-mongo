extends ../layout
block content
	.container
		h2 #{movie.name}
		each item in movie.movies
			div.row
				.col-sm-2
					a(href='/detail/#{item._id}')
						img.img-thumbnail(src='#{item.url}')
				.col-sm-10
					p
						a(href='/detail/#{item._id}') #{item.title}
					p #{item.dirs}
					p $#{item.sellprice}